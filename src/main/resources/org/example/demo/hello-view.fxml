<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" onAction="#onAddClick" text="Файл">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" onAction="#onEditClick" text="Данные">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#onDeleteClick" text="Удалить" />
               <MenuItem mnemonicParsing="false" onAction="#onEditClick" text="Изменить" />
             <MenuItem mnemonicParsing="false" onAction="#onAddClick" text="Добавить" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
  <TableView fx:id="MainTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
</VBox>
